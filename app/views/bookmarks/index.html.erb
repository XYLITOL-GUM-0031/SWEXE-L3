<div class="container">
  <h1 class="page-title">ブックマーク一覧</h1>

  <div class="grid grid-3">
    <% @bookmarks.each do |bookmark| %>
      <div class="card">
        <div class="card-header">
          <%= bookmark.title %>
        </div>
        <div class="card-body">
          <div class="actions">
            <%= link_to "表示", bookmark, class: "btn btn-outline" %>
            <%= link_to "編集", edit_bookmark_path(bookmark), class: "btn btn-primary" %>
            <%= button_to "削除", bookmark, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "＋ 新規追加", new_bookmark_path, class: "btn btn-success" %>
  </div>
</div>
